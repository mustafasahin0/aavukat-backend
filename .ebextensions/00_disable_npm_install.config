option_settings:
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "node dist/index.js"
    NodeVersion: "22"
  aws:elasticbeanstalk:application:environment:
    NPM_USE_PRODUCTION: true

commands:
  remove_npm_install:
    command: |
      echo "#!/bin/bash" > /opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh
      chmod +x /opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh